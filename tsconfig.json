{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "experimentalAsyncFunctions": true,
        "target": "ES6",
        "noLib": false
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./bundle/typings/tsd.d.ts",
        "./bundle/typings/alliance.d.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false,
        "formatOnSave": false
    }
}
